#include <stdio.h>

void mergeArrays(int array1[], int size1, int array2[], int size2, int array3[]) {
    // คัดลอกข้อมูลจาก array1 และ array2 ไปยัง array3
    for (int i = 0; i < size1; i++) {
        array3[i] = array1[i];
    }
    for (int i = 0; i < size2; i++) {
        array3[size1 + i] = array2[i];
    }
}

void sortArray(int array[], int size) {
    // การเรียงลำดับอาเรย์จากมากไปน้อย
    for (int i = 0; i < size - 1; i++) {
        for (int j = i + 1; j < size; j++) {
            if (array[i] < array[j]) {
                int temp = array[i];
                array[i] = array[j];
                array[j] = temp;
            }
        }
    }
}

int main() {
    int size1, size2;

    // รับขนาดของ Array1
    printf("Enter element of Array1:\n");
    scanf("%d", &size1);
    int array1[size1];

    // รับค่าจากผู้ใช้ใน Array1
    for (int i = 0; i < size1; i++) {
        printf("--| Array1 [%d] :\n", i);
        scanf("%d", &array1[i]);
    }

    // รับขนาดของ Array2
    printf("Enter element of Array2:\n");
    scanf("%d", &size2);
    int array2[size2];

    // รับค่าจากผู้ใช้ใน Array2
    for (int i = 0; i < size2; i++) {
        printf("--| Array2 [%d] :\n", i);
        scanf("%d", &array2[i]);
    }

    // สร้าง Array3 สำหรับเก็บผลลัพธ์การผสาน
    int array3[size1 + size2];

    // ผสาน Array1 และ Array2 เข้าด้วยกัน
    mergeArrays(array1, size1, array2, size2, array3);

    // เรียงลำดับ Array3 จากมากไปน้อย
    sortArray(array3, size1 + size2);

    // แสดงผลลัพธ์
    printf("Merge Array1 & Array2 to Array3\n");
    printf("Array3 = ");
    for (int i = 0; i < size1 + size2; i++) {
        printf("%d ", array3[i]);
    }
    printf("\n");

    return 0;
}
