#include <stdio.h>

int main() {
    int values[100]; // กำหนดอาเรย์สูงสุด 100 ค่า
    int count = 0; // ตัวแปรนับจำนวนค่าที่กรอก

    while (1) {
        printf("Input [%d] :\n", count);
        scanf("%d", &values[count]);

        if (values[count] == -1) { // หยุดกรอกเมื่อผู้ใช้กรอก -1
            break;
        }

        count++; // เพิ่มจำนวนค่าที่กรอก
    }

    // แสดงผลลัพธ์
    printf("Index = ");
    for (int i = 0; i < count; i++) {
        printf("%d ", i);
    }
    printf("\nArray = ");
    for (int i = 0; i < count; i++) {
        printf("%d ", values[i]);
    }
    printf("\n");

    return 0;
}
